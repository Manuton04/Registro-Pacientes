<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane prefHeight="500" prefWidth="768.0" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/17.0.12" fx:controller="org.registro.registro.MainController">

    <!-- Sidebar -->
    <left>
        <VBox prefWidth="250" spacing="10" style="-fx-background-color: #2c3e50;">
            <padding>
                <Insets bottom="10" left="10" right="10" top="10" />
            </padding>

            <Button maxWidth="Infinity" text="Agregar Paciente" />

            <TextField fx:id="buscador" onKeyReleased="#onSearch" promptText="Buscar paciente..." />

            <ScrollPane fitToWidth="true" style="-fx-background: #34495e;" VBox.vgrow="ALWAYS">
                <VBox fx:id="patientList" spacing="5">
                    <padding>
                        <Insets bottom="5" left="5" right="5" top="5" />
                    </padding>
                </VBox>
            </ScrollPane>
        </VBox>
    </left>

    <!-- Main content -->
    <center>
        <StackPane style="-fx-background-color: #ecf0f1;">
            <Label text="Selecciona un paciente" />
        </StackPane>
        <Button fx:id="btnEnviarTurnos" maxWidth="Infinity" onAction="#onEnviarTurnos" text="Enviar turnos de maÃ±ana" />
    </center>

</BorderPane>
